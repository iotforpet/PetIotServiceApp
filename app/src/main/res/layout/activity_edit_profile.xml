<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="editProfileViewModel"
            type="com.gratus.petservice.viewModel.activity.EditProfileViewModel"/>
    </data>
    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/theme">
        <RelativeLayout
            android:id="@+id/parent"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/backArrowImg"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/back_arrow"
                android:layout_margin="16dp"
                android:layout_alignParentLeft="true"
                android:padding="8dp"/>
            <ImageView
                android:id="@+id/flockImg"
                android:layout_width="200dp"
                android:layout_height="120dp"
                android:src="@drawable/logo"
                android:layout_centerHorizontal="true" />
            <TextView
                android:id="@+id/restTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/flockImg"
                android:layout_centerHorizontal="true"
                android:textAlignment="center"
                android:textSize="24dp"
                android:textStyle="bold"
                android:text="Edit Profile"/>
            <RelativeLayout
                android:id="@id/editRl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/restTv"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:paddingBottom="20dp"
                android:background="@drawable/relative_layout_bg">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/emailWrapper"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hintTextColor="@color/black"
                    app:startIconDrawable = "@drawable/email"
                    app:boxStrokeColor="@color/black"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    app:errorEnabled="@{editProfileViewModel.registrationRequest.e_mailChange}"
                    app:errorText="@{editProfileViewModel.registrationRequest.e_mailError}">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:ems="10"
                        android:hint="Type your Email"
                        android:background="@color/white"
                        android:textColor="@color/black"
                        android:enabled="false"
                        android:text="@={editProfileViewModel.registrationRequest.e_mail}"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        app:textChangedListener="@{editProfileViewModel.registrationRequest.emailTextWatcher}" />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/phoneWrapper"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/emailWrapper"
                    app:hintTextColor="@color/black"
                    app:boxStrokeColor="@color/black"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    app:startIconDrawable = "@drawable/phone"
                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                    app:errorEnabled="@{editProfileViewModel.registrationRequest.phoneChange}"
                    app:errorText="@{editProfileViewModel.registrationRequest.phoneError}">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:inputType="phone"
                        android:ems="10"
                        android:hint="Phone number"
                        android:textColor="@color/black"
                        android:background="@color/white"
                        android:text="@={editProfileViewModel.registrationRequest.phone}"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        app:textChangedListener="@{editProfileViewModel.registrationRequest.phoneTextWatcher}"/>
                </com.google.android.material.textfield.TextInputLayout>
                <RelativeLayout
                    android:id="@+id/gender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/phoneWrapper"
                    android:orientation="horizontal"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:padding="16dp"
                    android:background="@drawable/textview_bg">
                    <TextView
                        android:id="@+id/genderTv"
                        android:layout_width="50dp"
                        android:layout_height="20dp"
                        android:layout_centerVertical="true"
                        android:textStyle="bold"
                        android:text="Gender"/>
                    <TextView
                        android:id="@+id/manImg"
                        android:layout_width="40dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="40dp"
                        android:text="Male"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/genderTv"/>
                    <ImageView
                        android:id="@+id/manRadio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_centerVertical="true"
                        android:padding="4dp"
                        android:layout_toRightOf="@+id/manImg"
                        android:onClick="@{(v) -> editProfileViewModel.manImg()}"
                        app:srcMale = "@{editProfileViewModel.registrationRequest.sex_of_animal}"/>
                    <TextView
                        android:id="@+id/femaleImg"
                        android:layout_width="50dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="60dp"
                        android:text="Female"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/manRadio"/>
                    <ImageView
                        android:id="@+id/femaleRadio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:padding="4dp"
                        android:layout_centerVertical="true"
                        android:onClick="@{(v) -> editProfileViewModel.femaleImg()}"
                        app:srcFemale = "@{editProfileViewModel.registrationRequest.sex_of_animal}"
                        android:layout_toRightOf="@+id/femaleImg"/>
                </RelativeLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/typeWrapper"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/gender"
                    app:hintTextColor="@color/black"
                    app:boxStrokeColor="@color/black"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    app:startIconDrawable = "@drawable/pawprint"
                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                    app:errorEnabled="@{editProfileViewModel.registrationRequest.typeChange}"
                    app:errorText="@{editProfileViewModel.registrationRequest.typeError}">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:inputType="text"
                        android:ems="10"
                        android:hint="Type of animal"
                        android:textColor="@color/black"
                        android:background="@color/white"
                        android:text="@={editProfileViewModel.registrationRequest.type_of_animal}"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        app:textChangedListener="@{editProfileViewModel.registrationRequest.typeTextWatcher}"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/breedWrapper"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/typeWrapper"
                    app:hintTextColor="@color/black"
                    app:boxStrokeColor="@color/black"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    app:startIconDrawable = "@drawable/breed"
                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                    app:errorEnabled="@{editProfileViewModel.registrationRequest.breedChange}"
                    app:errorText="@{editProfileViewModel.registrationRequest.breedError}">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/breed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:inputType="text"
                        android:ems="10"
                        android:hint="Breed"
                        android:textColor="@color/black"
                        android:background="@color/white"
                        android:text="@={editProfileViewModel.registrationRequest.breed}"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        app:textChangedListener="@{editProfileViewModel.registrationRequest.breedTextWatcher}"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/nameWrapper"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/breedWrapper"
                    app:hintTextColor="@color/black"
                    app:boxStrokeColor="@color/black"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    app:startIconDrawable = "@drawable/breed"
                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                    app:errorEnabled="@{editProfileViewModel.registrationRequest.nameaChange}"
                    app:errorText="@{editProfileViewModel.registrationRequest.nameaError}">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:inputType="text"
                        android:ems="10"
                        android:hint="Name of the animal"
                        android:textColor="@color/black"
                        android:background="@color/white"
                        android:text="@={editProfileViewModel.registrationRequest.name_of_animal}"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        app:textChangedListener="@{editProfileViewModel.registrationRequest.nameaTextWatcher}"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/ageWrapper"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/nameWrapper"
                    app:hintTextColor="@color/black"
                    app:boxStrokeColor="@color/black"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    app:startIconDrawable = "@drawable/age"
                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                    app:errorEnabled="@{editProfileViewModel.registrationRequest.ageChange}"
                    app:errorText="@{editProfileViewModel.registrationRequest.ageError}">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/age"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:inputType="number"
                        android:ems="2"
                        android:hint="Age of the animal"
                        android:textColor="@color/black"
                        android:background="@color/white"
                        android:text="@={editProfileViewModel.registrationRequest.age_of_animal}"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        app:textChangedListener="@{editProfileViewModel.registrationRequest.ageTextWatcher}"/>
                </com.google.android.material.textfield.TextInputLayout>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rlBt"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@+id/editRl"
                android:background="@drawable/circle_button_tick"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:layout_alignParentTop="true"
                android:layout_margin="16dp"
                android:onClick="@{(v) -> editProfileViewModel.hitEdit()}"
                app:visibilityRelative = "@{editProfileViewModel.registrationRequest.visibilityButton}"/>
            <androidx.core.widget.ContentLoadingProgressBar
                android:id="@+id/resetProgressBar"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@+id/editRl"
                android:layout_alignParentRight="true"
                android:layout_margin="16dp"
                android:layout_alignParentTop="true"
                android:indeterminateDrawable="@drawable/progress_bar_login"
                app:visibilityProgressBar="@{editProfileViewModel.registrationRequest.visibilityProgressBar}" />
        </RelativeLayout>
    </ScrollView>
</layout>