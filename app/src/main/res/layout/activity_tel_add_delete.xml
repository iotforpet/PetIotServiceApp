<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="telegramUserViewModel"
            type="com.gratus.petservice.viewModel.activity.TelUsersViewModel"/>
    </data>
    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:orientation="vertical"
        android:layout_marginBottom="60dp"
        android:background="@color/white">
    <RelativeLayout
        android:id="@+id/parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/theme">
            <ImageView
                android:id="@+id/backArrowImg"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/back_arrow"
                android:layout_margin="16dp"
                android:layout_alignParentLeft="true"
                android:padding="8dp"/>
            <TextView
                android:id="@+id/restTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/flockImg"
                android:textSize="24dp"
                android:layout_toRightOf="@+id/backArrowImg"
                android:padding="8dp"
                android:layout_marginRight="48dp"
                android:layout_marginTop="16dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="Telegram users"/>
            <ImageView
                android:id="@+id/addImg"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/add"
                android:layout_margin="16dp"
                android:layout_alignParentRight="true"
                android:padding="8dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@id/editRl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/top"
            android:background="@color/grey"
            android:paddingBottom="2dp">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                app:telListAdapter="@{telegramUserViewModel.telUserResponse.output.telUsers}"
                tools:listitem="@layout/item_telegram"/>
        </RelativeLayout>
    </RelativeLayout>
    </ScrollView>
</layout>