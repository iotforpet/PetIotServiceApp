<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="appointViewModel"
            type="com.gratus.petservice.viewModel.fragment.AppointViewModel"/>
    </data>
    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:orientation="vertical"
        android:layout_marginBottom="60dp"
        android:background="@color/white">
        <RelativeLayout
            android:id="@+id/parent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/grey"
            android:fitsSystemWindows="true"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/theme">
                <TextView
                    android:id="@+id/restTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/flockImg"
                    android:layout_centerHorizontal="true"
                    android:textSize="20dp"
                    android:padding="16dp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:text="Settings"/>
                <View
                    android:id="@+id/view1"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_below="@+id/restTv"
                    android:background="@color/black"/>
            </RelativeLayout>
            <RelativeLayout
            android:id="@id/editRl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/top"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:paddingBottom="2dp"
            android:background="@drawable/relative_layout_bg">
            <TextView
                android:id="@+id/scServiceTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textColor="@color/black"
                android:background="@drawable/textview_bg"
                android:padding="16dp"
                android:drawablePadding="16dp"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:text="Doctor"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/brServiceTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textColor="@color/black"
                android:background="@drawable/textview_bg"
                android:layout_below="@+id/scServiceTv"
                android:padding="16dp"
                android:drawablePadding="16dp"
                android:textStyle="bold"
                android:text="Trainer Service"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:textSize="16sp" />
        </RelativeLayout>
            <TextView
                android:id="@+id/customerVoiceTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textColor="@color/black"
                android:layout_below="@+id/editRl"
                android:padding="16dp"
                android:drawablePadding="16dp"
                android:layout_marginTop="10dp"
                android:text="Customer Voice"
                android:layout_marginLeft="23dp"
                android:layout_marginRight="3dp"
                android:textStyle="bold"
                android:textSize="16sp" />
            <RelativeLayout
            android:id="@id/aboutRl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/customerVoiceTv"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
                 android:paddingBottom="20dp"
            android:background="@drawable/relative_layout_bg">
                <EditText
                    android:id="@+id/customerVTV"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:maxHeight="200dp"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/black"
                    android:padding="16dp"
                    android:textStyle="bold"
                    android:gravity="top"
                    android:text="@={appointViewModel.appointRequest.customer_voice}"
                    android:textSize="16sp" />
                  <LinearLayout
                      android:id="@+id/dtet"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal"
                      android:padding="8dp"
                      android:layout_below="@+id/customerVTV">
                      <ImageView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:padding="8dp"
                          android:background="@drawable/textvie"
                          android:src="@drawable/calender"/>
                      <TextView
                          android:id="@+id/dateTv"
                          android:layout_width="125dp"
                          android:layout_height="wrap_content"
                          android:padding="10dp"
                          android:background="@drawable/textvie"
                          android:hint="dd-mm-yyyy"/>
                      <ImageView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:padding="8dp"
                          android:layout_marginLeft="2dp"
                          android:background="@drawable/textvie"
                          android:src="@drawable/clock"/>
                      <TextView
                          android:id="@+id/timeTv"
                          android:layout_width="125dp"
                          android:layout_height="wrap_content"
                          android:padding="10dp"
                          android:background="@drawable/textvie"
                          android:hint="HH:MM:SS"/>
                  </LinearLayout>
                  <TextView
                      android:id="@+id/book"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_centerHorizontal="true"
                      android:textColor="@color/black"
                      android:layout_below="@+id/dtet"
                      android:padding="8dp"
                      android:textAlignment="center"
                      android:text="Book an advance appointment"
                      android:layout_marginLeft="23dp"
                      android:layout_marginRight="3dp"
                      android:textStyle="bold"
                      android:textSize="16sp" />
                  <com.google.android.material.button.MaterialButton
                      android:id="@+id/bookLayout"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_below="@+id/book"
                      android:layout_centerHorizontal="true"
                      android:layout_marginLeft="40dp"
                      android:layout_marginRight="40dp"
                      android:padding="16dp"
                      android:text="Book"
                      android:textColor="@color/white"
                      android:textSize="20sp"
                      android:textStyle="bold"
                      app:backgroundTint="@color/theme" />
              </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
</layout>